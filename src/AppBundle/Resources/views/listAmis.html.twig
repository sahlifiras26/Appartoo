{% extends "AppBundle::layout.html.twig" %}

{% block content %}
<h1>Liste des utilisateurs</h1>

<table border="1">
    <tr>
        <td>username</td>
        <td>age</td>
        <td>nourriture</td>
        <td>famille</td>
        <td>couleure</td>
        <td>email</td>
        <td>Action</td>
    </tr>
    {% for user in users %}
    {% if app.user.getId != user.id %}
    <tr>
        <td>{{user.username}}</td>
        <td>{{user.age}}</td>
        <td>{{user.nourriture}}</td>
        <td>{{user.famille}}</td>
        <td>{{user.couleur}}</td>
        <td>{{user.email}}</td>
        <td><a href="{{ path('add', {'id': user.id}) }}">
                    Ajouter Amis
                </a></td>
    </tr>
    {% endif %}
    {% endfor %}
</table>

{% endblock content %}